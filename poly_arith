#include <stdio.h>
#include <stdlib.h>
 
struct node {
    int coeff;
    int pow;
    struct node *next;
};
 
struct node *createNode(int c, int p) {
    struct node *newNode = (struct node*)malloc(sizeof(struct node));
    if (!newNode) {
        printf("Memory allocation failed\n");
        exit(1);
    }
    newNode->coeff = c;
    newNode->pow = p;
    newNode->next = NULL;
    return newNode;
}
 
// Insert at end to keep input order
void append(struct node **head, int c, int p) {
    if (c == 0) return;
    struct node *newNode = createNode(c, p);
    if (*head == NULL)
        *head = newNode;
    else {
        struct node *temp = *head;
        while (temp->next)
            temp = temp->next;
        temp->next = newNode;
    }
}
 
struct node *addPoly(struct node *p1, struct node *p2) {
    struct node *result = NULL;
    while (p1 && p2) {
        if (p1->pow > p2->pow) {
            append(&result,p1->coeff, p1->pow);
            p1 = p1->next;
        } else if (p1->pow < p2->pow) {
            append(&result,p2->coeff, p2->pow);
            p2 = p2->next;
        } else {
            int sum = p1->coeff + p2->coeff;
            append(&result, sum, p1->pow);
            p1 = p1->next;
            p2 = p2->next;
        }
    }
    while (p1) {
        append(&result, p1->coeff, p1->pow);
        p1 = p1->next;
    }
    while (p2) {
        append(&result, p2->coeff, p2->pow);
        p2 = p2->next;
    }
    return result;
}
 
void display(struct node *poly) {
    while (poly) {
        printf("%dx^%d", poly->coeff, poly->pow);
        poly = poly->next;
        if (poly && poly->coeff > 0)
            printf(" + ");
        else if (poly)
            printf(" ");
    }
    printf("\n");
}
 
void inputPoly(struct node **poly, int n) {
    int coeff, pow;
    for (int i = 0; i < n; i++) {
        printf("Enter coefficient and power for term %d: ", i+1);
        scanf("%d%d", &coeff, &pow);
        append(poly, coeff, pow);
    }
}
 
int main() {
    struct node *poly1 = NULL, *poly2 = NULL, *sum = NULL;
    int n1, n2;
 
    printf("Enter number of terms in Polynomial 1: ");
    scanf("%d", &n1);
    inputPoly(&poly1, n1);
 
    printf("Enter number of terms in Polynomial 2: ");
    scanf("%d", &n2);
    inputPoly(&poly2, n2);
 
    printf("Polynomial 1: ");
    display(poly1);
 
    printf("Polynomial 2: ");
    display(poly2);
 
    sum = addPoly(poly1, poly2);
    printf("Sum: ");
    display(sum);
 
    return 0;
}
