#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_SIZE 100

char stack[MAX_SIZE];
int top = -1;

void push(char data) {
    if (top == MAX_SIZE - 1) {
        printf("Stack overflow\n");
    } else {
        top++;
        stack[top] = data;
    }
}

char pop() {
    if (top == -1) {
        printf("Stack underflow\n");
        return '\0'; // return null char to indicate underflow
    } else {
        char data = stack[top];
        top--;
        return data;
    }
}

int matching_pair(char char1, char char2) {
    if (char1 == '[' && char2 == ']')
        return 1;
    else if (char1 == '{' && char2 == '}')
        return 1;
    else if (char1 == '(' && char2 == ')')
        return 1;
    else
        return 0;
}

int balanced(char *e) {
    while (*e != '\0') {
        if (*e == '[' || *e == '{' || *e == '(')
            push(*e);
        else if (*e == ']' || *e == '}' || *e == ')') {
            if (top == -1)
                return 0;
            else if (!matching_pair(pop(), *e))
                return 0;
        }
        e++;
    }
    if (top == -1)
        return 1;
    else
        return 0;
}

int main() {
    char text[MAX_SIZE];
    printf("Input an expression in parentheses: ");
    scanf("%s", text);

    if (balanced(text)) {
        printf("The expression is balanced.\n");
    } else {
        printf("The expression is not balanced.\n");
    }

    return 0;
}
