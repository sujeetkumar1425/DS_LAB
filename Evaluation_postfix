#include <stdio.h>
#include <string.h>
#include <stdlib.h>
#include <ctype.h>

int stack[100];
int top = -1;

void push(int val) {
    stack[++top] = val;
}

int pop() {
    return stack[top--];
}

int main() {
    char expr[100];
    printf("Enter postfix expression (space-separated): ");
    fgets(expr, sizeof(expr), stdin);  // safer than gets()

    int i = 0;

    while (expr[i] != '\0') {
        if (isdigit(expr[i])) {
            push(expr[i] - '0');  // convert char to int
        }
        else if (expr[i] == ' ') {
            i++;
            continue;
        }
        else {
            int b = pop();
            int a = pop();
            switch (expr[i]) {
                case '+': push(a + b);
                    break;
                case '-': push(a - b);
                    break;
                case '*': push(a * b);
                    break;
                case '/': push(a / b);
                    break;
                default:
                    printf("Invalid operator: %c\n", expr[i]);
                    return 1;
            }
        }
        i++;
    }

    printf("Result: %d\n", pop());
    return 0;
}
