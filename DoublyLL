#include <stdio.h>
#include <stdlib.h>

struct node {
    int info;
    struct node *prev;
    struct node *next;
};

struct node *start = NULL;

struct node *create_node(int item) {
    struct node *new_node = (struct node*)malloc(sizeof(struct node));
    if (new_node == NULL) {
        printf("Memory allocation failed!\n");
        exit(1);
    }
    new_node->info = item;
    new_node->next = NULL;
    new_node->prev = NULL;
    return new_node;
}

void insert_beg(int item) {
    struct node *new_node = create_node(item);
    if (start == NULL) {
        start = new_node;
    } else {
        new_node->next = start;
        start->prev = new_node;
        start = new_node;
        printf("node is inserted at the beginning\n");
    }
}

void insert_end(int item) {
    struct node *new_node = create_node(item);
    if (start == NULL) {
        start = new_node;
    } else {
        struct node *ptr = start;
        while (ptr->next != NULL) {
            ptr = ptr->next;
        }
        ptr->next = new_node;
        new_node->prev = ptr;
        printf("node is inserted at the END\n");
    }
}

void insert_pos(int item, int pos) {
    if (pos == 1) {
        insert_beg(item);
        return;
    }
    
    struct node *new_node = create_node(item);
    struct node *ptr = start;
    int count = 1;

    // Traverse to the node *before* the insertion point
    while (ptr != NULL && count < pos - 1) {
        ptr = ptr->next;
        count++;
    }

    if (ptr == NULL) {
        printf("Invalid position\n");
        free(new_node);
    } else {
        // Handle insertion at the very end
        if (ptr->next == NULL) {
            ptr->next = new_node;
            new_node->prev = ptr;
        } 
        // Handle insertion in the middle
        else {
            new_node->next = ptr->next;
            new_node->prev = ptr;
            ptr->next->prev = new_node;
            ptr->next = new_node;
        }
        printf("node is inserted at the specified position\n");
    }
}

void delete_beg() {
    if (start == NULL) {
        printf("list is empty\n");
    } else {
        struct node *temp = start;
        start = start->next;
        if (start != NULL) {
            start->prev = NULL;
        }
        free(temp);
        printf("node deleted from the beginning\n");
    }
}

void delete_end() {
    if (start == NULL) {
        printf("List is empty\n");
        return;
    } 
    
    struct node *temp = start;

    if (start->next == NULL) {
        free(start);
        start = NULL;
        printf("node deleted from end\n");
        return;
    } 
    
    // Traverse to the last node
    while (temp->next != NULL) {
        temp = temp->next;
    }
    
    temp->prev->next = NULL;
    free(temp);
    printf("node deleted from end\n");
}

void delete_pos(int pos) {
    if (start == NULL) {
        printf("List is empty\n");
        return;
    }

    if (pos == 1) {
        delete_beg();
        return;
    }

    struct node *current = start;
    int count = 1;

    // Traverse to the node to be deleted
    while (current != NULL && count < pos) {
        current = current->next;
        count++;
    }

    if (current == NULL) {
        printf("Invalid position\n");
        return;
    }

    // Link previous node to next node
    current->prev->next = current->next;
    
    // If it's not the last node, link next node to previous node
    if (current->next != NULL) {
        current->next->prev = current->prev;
    }

    free(current);
    printf("node deleted from position %d\n", pos);
}

void display() {
    if (start == NULL) {
        printf("list is empty\n");
    } else {
        struct node *ptr = start;
        printf("List elements:\n");
        while (ptr != NULL) {
            printf("%d\n", ptr->info);
            ptr = ptr->next;
        }
    }
}

int count_nodes() {
    struct node *ptr = start;
    int count = 0;
    while(ptr != NULL) {
        count++;
        ptr = ptr->next;
    }
    return count;
}


int main() {
    int choice = 0, item;
    
    while (choice != 8) {
        printf("\n1.Insert at beginning\n2.Insert at end\n3.Insert after specified position\n4.Delete from beginning\n5.Delete from end\n6.Delete at specified position\n7.Display\n8.Exit\n9.Count Nodes\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("enter item to be inserted: ");
                scanf("%d", &item);
                insert_beg(item);
                break;
            case 2:
                printf("enter item to be inserted: ");
                scanf("%d", &item);
                insert_end(item);
                break;
            case 3:
                printf("Enter position after which you want to insert (e.g., 1 for pos 2): ");
                int pos;
                scanf("%d", &pos);
                printf("enter item to be inserted: ");
                scanf("%d", &item);
                insert_pos(item, pos + 1);
                break;
            case 4:
                delete_beg();
                break;
            case 5:
                delete_end();
                break;
            case 6:
                printf("Enter position to delete: ");
                int position;
                scanf("%d", &position);
                delete_pos(position);
                break;
            case 7:
                display();
                break;
            case 8:
                // Free memory before exit (Good practice)
                while(start != NULL) delete_beg();
                exit(0);
            case 9:
                printf("Total nodes: %d\n", count_nodes());
                break;
            default:
                printf("Invalid choice\n");
        }
    }
    return 0;
}
